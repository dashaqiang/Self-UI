{
  "name": "self-ui",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/lib/index.js",
  "module": "dist/es/index.mjs",
  "types": "dist/es/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "gen:components": "node scripts/gen-components.js",
    "gen:plugins": "node scripts/gen-plugins.js",
    "gen:global-dts": "node scripts/gen-global-dts.js",
    "prebuild": "npm run gen:components && npm run gen:plugins",
    "build": "vite build && vue-tsc --emitDeclarationOnly && npm run gen:global-dts",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "exports": {
    ".": {
      "types": "./dist/es/index.d.ts",
      "import": "./dist/es/index.mjs",
      "require": "./dist/lib/index.js"
    },
    "./global": {
      "types": "./dist/global.d.ts"
    },
    "./style.css": {
      "import": "./dist/es/style.css"
    }
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^3.0.0",
    "cpx": "^1.5.0",
    "sass": "^1.32.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "vite": "^3.0.0",
    "vue": "^3.2.0",
    "vue-tsc": "^1.0.8"
  }
}
